<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="fio"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:binding="http://eclipse.org/smarthome/schemas/binding/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/binding/v1.0.0 http://eclipse.org/smarthome/schemas/binding-1.0.0.xsd">

    <name>FIO Binding</name>
    <description>Read balances of your bank accounts in FIO Banka a.s.</description>
    <author>Ondrej Pecta</author>
    
    <service-id>org.openhab.csas</service-id>

    <config-description>
        <parameter name="refresh" type="integer">
            <label>Refresh interval</label>
            <description>Data refresh interval in milliseconds.</description>
            <default>1800000</default>
        </parameter>
        <parameter name="token" type="text" required="true">
            <label>FIO token generated in your IB.</label>
        </parameter>
    </config-description>
</binding:binding>
